datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  gutenId     Int      @id
  textUrl     String   @default("")
  title       String
  author      String
  publishDate DateTime
  language    String
  createdAt   DateTime @default(now())
}

model AiSummary {
  gutenId      Int      @unique
  bulletPoints String[]
}
